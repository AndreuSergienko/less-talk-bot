{
	"compilerOptions": {
		"target": "ES2016",
		"module": "CommonJS",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@commands": ["commands"],
			"@commands/*": ["commands/*"],
			"@interfaces": ["interfaces"],
			"@api": ["api"],
			"@api/*": ["api/*"],
			"@constants": ["constants"],
			"@constants/*": ["constants/*"],
			"@helpers": ["helpers"],
			"@helpers/*": ["helpers/*"],
			"@scenes": ["scenes"],
			"@services": ["services"],
			"@services/*": ["services/*"],
			"@buttons": ["buttons"]
		},
		"allowJs": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
