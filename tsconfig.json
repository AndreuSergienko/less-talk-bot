{
	"compilerOptions": {
		"target": "ES2016",
		"module": "CommonJS",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@context": ["context"],
			"@commands": ["commands"],
			"@constants": ["constants"],
			"@constants/*": ["constants/*"],
			"@helpers": ["helpers"],
			"@helpers/*": ["helpers/*"],
			"@scenes": ["scenes"],
			"@services": ["services"],
			"@services/*": ["services/*"],
			"@buttons": ["buttons"]
		},
		"allowJs": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"src/**/*",
		"src/**/**/*",
		"src/**/**/**/*",
		"webpack.config.js"
	]
}
