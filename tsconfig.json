{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@config": ["config"],
			"@context": ["context"],
			"@commands": ["commands"],
			"@constants": ["constants"],
			"@constants/*": ["constants/*"],
			"@helpers": ["helpers"],
			"@helpers/*": ["helpers/*"],
			"@scenes": ["scenes"],
			"@services": ["services"],
			"@services/*": ["services/*"],
			"@buttons": ["buttons"]
		},
		"allowJs": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
